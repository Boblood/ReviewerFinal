@model IEnumerable<ReviewerFinal.Models.GameReview>

@{
    ViewBag.Title = "ListReviewByGame";
}

<h2>@ViewBag.GameName Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.GameID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameID.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameID.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) 

            </td>
            @if (User.IsInRole("GameAdmin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
                </td>
            }
        </tr>
    }

</table>
