@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1" class=""></li>
            <li data-target="#myCarousel" data-slide-to="2" class=""></li>
            <li data-target="#myCarousel" data-slide-to="3" class=""></li>
            <li data-target="#myCarousel" data-slide-to="4" class=""></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="@ViewBag.FirstFiveGames[0]">
            </div>
            <div class="item">
                <img src="@ViewBag.FirstFiveGames[1]">
            </div>
            <div class="item">
                <img src="@ViewBag.FirstFiveGames[2]">
            </div>
            <div class="item">
                <img src="@ViewBag.FirstFiveGames[3]">
            </div>
            <div class="item">
                <img src="@ViewBag.FirstFiveGames[4]">
            </div>

        </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
    </div>
</div>

<div class="row">
    <h2>About This Site</h2>
    <p>
        This site is about all the video games that really made my childhood and my current life. These are the games that
        stuck out to me as ones that went above and beyond “regular” video games. This site focuses on Console games with
        some pc games mixed in. it does not include arcade or board games, so no DnD.
    </p>
</div>